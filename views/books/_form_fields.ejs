<div class="form-row">
    <div class="form-item">
        <label for="title">Título</label>
        <input type="text" name="title" value="<%= book.title %>">
    </div>
    <div class="form-item">
        <label for="author">Autor</label>
        <select name="author">
            <% authors.forEach(author =>{ %>
                <% if(author.id === book.author){ %>
                    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                <% } else { %>
                    <option label="<%= author.name %>" value="<%= author.id %>"></option>
                <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Data de publicação</label>
        <input type="date" name="publishDate" 
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label for="pageCount">Número de páginas</label>
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Capa</label>
        <input type="file" name="cover" class=" book-cover filepond">
    </div>
    <div class="form-item">
        <label for="description">Descrição</label>
        <textarea name="description"><%= book.description %></textarea>
    </div>
</div>